CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
	chmod u+x $(NAME)
clean: *~ $(NAME)
	$(RM) *~ *.swp $(NAME)
oclean: $(OBJ)
	$(RM) $(OBJ)
fclean: *~ $(NAME) $(OBJ)
	$(RM) *~ *.swp $(NAME) $(OBJ)
re: $(NAME)
	fclean *~ *.swp $(NAME) $(OBJ)
	all $(NAME)
